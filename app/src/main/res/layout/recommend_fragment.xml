<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/recommend_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/recommend_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginHorizontal="3dp"
                android:layout_marginVertical="6dp"
                android:gravity="center_vertical"
                android:paddingStart="3dp"
                android:text="大家在看"
                android:textColor="#000"
                android:textSize="16sp" />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee" />

            <ProgressBar
                android:id="@+id/popular_progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="104dp"
                android:indeterminateTint="@color/colorPrimary"
                android:padding="24dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/popular_recommend_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="13dp"
                android:background="#eee">

            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginHorizontal="3dp"
                android:layout_marginVertical="6dp"
                android:gravity="center_vertical"
                android:paddingStart="3dp"
                android:text="猜你喜欢"
                android:textColor="#000"
                android:textSize="16sp" />


            <FrameLayout
                android:id="@+id/recommend_frame_layout"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee" />

            <TextView
                android:id="@+id/guessing_not_login_text"
                android:layout_width="match_parent"
                android:layout_height="104dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="登录后即可获得个性推荐"
                android:textColor="#888"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/guessing_progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="104dp"
                android:indeterminateTint="@color/colorPrimary"
                android:padding="24dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/guessing_recommend_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@+id/recommend_frame_layout1"
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="#eee">

            </FrameLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>